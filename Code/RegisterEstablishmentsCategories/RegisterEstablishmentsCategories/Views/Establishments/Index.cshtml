@{
    ViewData["Title"] = "Estabelecimentos Cadastrados";

    @Scripts.Render("~/Scripts/Views/Establishment.js");
}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script>
    var urlDataTableRegister = '@Url.Action("DatatableRegister", "Establishments")';
    var urlOpenRegister = '@Url.Action("Register", "Establishments")';
    var urlSaveRegister = '@Url.Action("Save", "Establishments")';
    var urlDeleteRegister = '@Url.Action("Delete", "Establishments")';
    var urlIndexMenu = '@Url.Action("Index", "Menu")';

    $(document).ready(function () {
        InitializaDatatableRegister("tableRegister");

        $('#PhoneNumber').mask('000.00000.0000')
    });
</script>

<div>
    <div class="titlePage">
        <h2>@ViewData["Title"]</h2>

        <div class="pull-right" margin-right: 15px;">
            <a type="button" class="btn_goBackPage" onclick="GoBackMenu();" value="Cadastrar">
                @Html.Raw("Voltar")
            </a>
        </div>
        <hr />
    </div>
</div>

<div>
    <div class="col-sm-12 col-lg-12">
        <div class="pull-right" style="margin-bottom: 10px; margin-right: 15px;">
            <button type="button" class="btn btn-primary" onclick="Register();" value="Cadastrar">
                @Html.Raw("Cadastrar")
            </button>
        </div>
    </div>

    <div class="col-sm-12" style="min-height: 500px;">
        <div class="table-responsive">
            <table id="tableRegister" class="table table-striped table-bordered table-hover" style="width: 100%;"></table>
        </div>
    </div>
    <br />
</div>

<div id="ModalRegisterInput"></div>


